<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="com.fzc.springtest.orm.hibernate.Book" table="book">
	<property name="book_id" column="book_id"></property>
	<property name="book_name" column="book_name"></property>
	<property name="book_desc" column="book_desc"></property>
</class>
</hibernate-mapping> 